<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


	<!-- using parameterized constructor  -->
	<bean id="Employee" class="in.happycoding.bean.Employee">
	<constructor-arg name="id" value="101"/>
	<constructor-arg name="firstName" value="Shashikant"/>
	<constructor-arg name="lastName" value="Tayade"/>
		
	</bean>
	
	<!-- using parameterized constructor  -->
	<bean id="Laptop" class="in.happycoding.bean.Laptop">
	<constructor-arg name="modelNo" value="77099"/>
	<constructor-arg name="ram" value="64GB"/>
	<constructor-arg name="price" value="80000"/>
		
	</bean>
	
	
	<!-- using parameterized constructor  -->
	<bean id="Bike" class="in.happycoding.bean.Bike">
	<constructor-arg name="company" value="BMW"/>
	<constructor-arg name="power" value="10000 CC"/>
	<constructor-arg name="price" value="800000"/>
		
	</bean>
	
	
	<!-- using parameterized constructor  -->
	<bean id="TV" class="in.happycoding.bean.TV">
	<constructor-arg name="name" value="Avita"/>
	<constructor-arg name="function" value="Android"/>
	<constructor-arg name="price" value="500000"/>
		
	</bean>
	
	
	
	<!-- using default constructor (need to use setter method) -->
	<bean id="Employee1" class="in.happycoding.bean.Employee">
   <!-- <property name="id" value="102"/>
	<property name="firstName" value="Ashwini"/>
	<property name="lastName" value="Shinde"/>  -->
		
	</bean>
	
</beans> 